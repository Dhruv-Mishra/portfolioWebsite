# Headers file for static hosting platforms (Cloudflare Pages, Netlify, etc.)
# These headers help improve caching and security

# All pages
/*
  X-Frame-Options: SAMEORIGIN
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=()

# Static assets - aggressive caching (1 year)
/_next/static/*
  Cache-Control: public, max-age=31536000, immutable

# Hashed chunk files - immutable
/_next/static/chunks/*
  Cache-Control: public, max-age=31536000, immutable

# CSS files
/_next/static/css/*
  Cache-Control: public, max-age=31536000, immutable

# Static resources
/resources/*
  Cache-Control: public, max-age=31536000, immutable

# Fonts
/*.woff
  Cache-Control: public, max-age=31536000, immutable
/*.woff2
  Cache-Control: public, max-age=31536000, immutable

# Images
/*.png
  Cache-Control: public, max-age=31536000, immutable
/*.jpg
  Cache-Control: public, max-age=31536000, immutable
/*.svg
  Cache-Control: public, max-age=31536000, immutable
/*.ico
  Cache-Control: public, max-age=31536000, immutable
/*.webp
  Cache-Control: public, max-age=31536000, immutable

# Manifest and robots
/manifest.json
  Cache-Control: public, max-age=86400
/robots.txt
  Cache-Control: public, max-age=86400
/sitemap.xml
  Cache-Control: public, max-age=86400

# HTML pages - shorter cache for dynamic updates
/*.html
  Cache-Control: public, max-age=3600, stale-while-revalidate=86400
